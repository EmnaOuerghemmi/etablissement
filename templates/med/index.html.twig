{% extends 'back.html.twig' %}

{% block title %}Medcin index{% endblock %}

{% block body %}
    <h1>Doctors index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Full name</th>
                <th>Speciality</th>
                 
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for med in meds %}
            <tr>
                <td>{{ med.id }}</td>
                <td>{{ med.nom }}</td>
                <td>{{ med.prenom }}</td>
                <td>{{ med.specialite }}</td>
               
                <td>
                    <a href="{{ path('app_med_show', {'id': med.id}) }}">show</a>
                    <a href="{{ path('app_med_edit', {'id': med.id}) }}">edit</a>
                </td>

            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_med_new') }}">Create new</a>
{% endblock %}
